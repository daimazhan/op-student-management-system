<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studentmanagement.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.example.studentmanagement.entity.Role">
        <id column="id" property="id"/>
        <result column="role_code" property="roleCode"/>
        <result column="role_name" property="roleName"/>
        <result column="description" property="description"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="list" resultMap="BaseResultMap">
        SELECT * FROM role WHERE status = 1 ORDER BY id ASC
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM role WHERE id = #{id}
    </select>

    <select id="findByRoleCode" resultMap="BaseResultMap">
        SELECT * FROM role WHERE role_code = #{roleCode}
    </select>

    <select id="existsByRoleCode" resultType="boolean">
        SELECT COUNT(*) > 0 FROM role WHERE role_code = #{roleCode}
        <if test="excludeId != null">
            AND id != #{excludeId}
        </if>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role (role_code, role_name, description, status, create_time, update_time)
        VALUES (#{roleCode}, #{roleName}, #{description}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <update id="update">
        UPDATE role
        <set>
            <if test="roleCode != null">role_code = #{roleCode},</if>
            <if test="roleName != null">role_name = #{roleName},</if>
            <if test="description != null">description = #{description},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM role WHERE id = #{id}
    </delete>

</mapper>
