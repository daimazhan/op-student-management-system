<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studentmanagement.mapper.RoleMenuMapper">

    <insert id="insert">
        INSERT INTO role_menu (role_id, menu_id)
        VALUES (#{roleId}, #{menuId})
    </insert>

    <delete id="deleteByRole">
        DELETE FROM role_menu WHERE role_id = #{role}
    </delete>

    <delete id="deleteByMenuId">
        DELETE FROM role_menu WHERE menu_id = #{menuId}
    </delete>

    <select id="findMenuIdsByRole" resultType="java.lang.Long">
        SELECT menu_id FROM role_menu WHERE role_id = #{role}
    </select>

</mapper>
