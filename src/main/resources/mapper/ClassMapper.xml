<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.studentmanagement.mapper.ClassMapper">

    <resultMap id="BaseResultMap" type="com.example.studentmanagement.entity.ClassEntity">
        <id column="id" property="id"/>
        <result column="class_name" property="className"/>
        <result column="grade" property="grade"/>
        <result column="major" property="major"/>
        <result column="teacher_name" property="teacherName"/>
        <result column="student_count" property="studentCount"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, class_name, grade, major, teacher_name, student_count, create_time, update_time
    </sql>

    <select id="list" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM class
        ORDER BY id DESC
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM class
        WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO class (class_name, grade, major, teacher_name, student_count, create_time, update_time)
        VALUES (#{className}, #{grade}, #{major}, #{teacherName}, #{studentCount}, #{createTime}, #{updateTime})
    </insert>

    <update id="update">
        UPDATE class
        <set>
            <if test="className != null">class_name = #{className},</if>
            <if test="grade != null">grade = #{grade},</if>
            <if test="major != null">major = #{major},</if>
            <if test="teacherName != null">teacher_name = #{teacherName},</if>
            <if test="studentCount != null">student_count = #{studentCount},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM class WHERE id = #{id}
    </delete>

</mapper>
